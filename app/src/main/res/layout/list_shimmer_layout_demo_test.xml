<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#dddddd"

        app:strokeColor="#ABA3A3"
        app:strokeWidth="1dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idTextViewQuestionNoDemoTestActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:textColor="#323232"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idTextViewQuestionDemoTestActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:textColor="#1A1919"
                android:textSize="18sp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:paddingLeft="140dp"
                android:paddingBottom="20dp"
                android:textColor="#000000"
                android:background="#dddddd"
                android:textSize="18sp"
                android:textStyle="bold"
                app:strokeColor="#ABA3A3"
                app:strokeWidth="1dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/idCardViewOP1DemoTestActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="0dp"
                app:strokeColor="#ABA3A3"
                app:strokeWidth="1dp"
                android:clickable="true"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#dddddd"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:textSize="17sp" />


                    <TextView
                        android:id="@+id/idTextViewOP1DemoTestActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:textColor="#1F1D1D"
                        android:textSize="18sp" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/idCardViewOP2DemoTestActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="0dp"
                app:strokeColor="#ABA3A3"
                app:strokeWidth="1dp"
                android:clickable="true"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#dddddd"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:textSize="17sp" />


                    <TextView
                        android:id="@+id/idTextViewOP2DemoTestActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:textColor="#1F1D1D"
                        android:textSize="18sp" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/idCardViewOP3DemoTestActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="0dp"
                app:strokeColor="#ABA3A3"
                app:strokeWidth="1dp"
                android:clickable="true"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#dddddd"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:textSize="17sp" />


                    <TextView
                        android:id="@+id/idTextViewOP3DemoTestActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:textColor="#1F1D1D"
                        android:textSize="18sp" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/idCardViewOP4DemoTestActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="0dp"
                app:strokeColor="#ABA3A3"
                app:strokeWidth="1dp"
                android:clickable="true"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#dddddd"



                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:textSize="17sp" />


                    <TextView
                        android:id="@+id/idTextViewOP4DemoTestActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:textColor="#1F1D1D"
                        android:textSize="18sp" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


</LinearLayout>